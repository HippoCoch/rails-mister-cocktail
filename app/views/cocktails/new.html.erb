
<div style="background: linear-gradient(-225deg, rgba(0,101,168,1) 0%, rgba(0,36,61,0.4) 60%);" class="pb-5">

  <div class="container text-center display-flex justify-content-center">
   <h1>Create your new Cocktail</h1>
    <div class="row">
      <div class="col">

        <%= simple_form_for @cocktail do |f| %>
          <%= f.input :name %>
          <%= f.submit class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
    <hr>

    <%= link_to 'Go back to your cocktail list', root_path %>

    <hr>
  </div>


</div>
