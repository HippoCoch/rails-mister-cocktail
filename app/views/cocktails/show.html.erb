
<div class="container text-center display-flex justify-content-center">
<h1><%= @cocktail.name.capitalize %></h1>
  <div class="row">
    <div class="col">

    <h3>Description :</h3>

    <ul class="list-inline">
      <li> - INFOS :</li>
      <% @cocktail.doses.each do |dose| %>
        <li> - ingredient you need : <%= dose.ingredient.name %> / - Dose : <%= dose.description %></li>
      <% end %>
    </ul>

    <%= simple_form_for [@cocktail, @dose] do |f|%>
      <%= f.association :ingredient %>
      <%= f.input :description %>
      <%= f.submit class: "btn btn-primary" %>
    <% end %>



